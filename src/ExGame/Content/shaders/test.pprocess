#else
layout(std430, binding = 12) buffer FINAL_PASSES {
	sampler2D passes[4];
};
#endif

#ifdef GL_ARB_bindless_texture
#define TEXTURE(id, index, UV) texture(tex[index], UV)
#else
#define TEXTURE(id, index, UV) texture(tex#id, UV)
#endif

#ifndef GL_ARB_bindless_texture
uniform sampler2D tex4;
#else
layout(std430) buffer TEXTURES {
    sampler2D tex[1];
};
#endif

void main() {
    FragColor = texture(passes[0], UVcoords) * vec4(TEXTURE(4, 0, UVcoords).rgb, 1.0);
}",
